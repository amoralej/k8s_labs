{
    "apiVersion": "v1beta3",
    "id": "mysql-server",
    "kind": "Pod",
    "metadata": {
        "labels": {
            "name": "mysql-server"
        },
        "name": "mysql-server"
    },
    "spec": {
        "containers": [
            {
                "env": [
                    {
                        "name": "MYSQL_USER",
                        "value": "mysql"
                    },
                    {
                        "name": "MYSQL_PASSWORD",
                        "value": "mysql"
                    },
                    {
                        "name": "MYSQL_DATABASE",
                        "value": "sample"
                    },
                    {
                        "name": "MYSQL_ROOT_PASSWORD",
                        "value": "supersecret"
                    },
                    {
                        "name": "DATADIR",
                        "value": "/tmp/data"
                    }
                ],
                "image": "mysql_demo:latest",
                "imagePullPolicy": "IfNotPresent",
                "name": "mysql-server",
                "ports": [
                    {
                        "containerPort": 3306
                    }
                ],
                "resources": {
                    "limits": {
                        "cpu": "1",
                        "memory": "500Mi"
                    }
                }
            }
        ]
    }
}

